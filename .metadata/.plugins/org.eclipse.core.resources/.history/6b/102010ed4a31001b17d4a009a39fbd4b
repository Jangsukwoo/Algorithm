package CodingTest;

public class 에스티4 {
	public static void main(String[] args) {
		System.out.println(solution("abcde",new int[][]{{1,3},{1,4},{4,5}}));
	}
    public static String solution(String S, int[][] interval) {
        String answer = "";
        
        char[] characterArray = S.toCharArray();
        
        for(int i=0;i<interval.length;i++) {
        	
        	int startIdx = interval[i][0]-1;
        	int endIdx = interval[i][1]-1;
        	
        	char[] intervalArray = getIntervalArray(characterArray,startIdx,endIdx);
        	int idx = endIdx;
        	System.out.println(startIdx+" "+endIdx);
        	for(int j=startIdx;j<=endIdx;j++) {
        		char swapCharacter = intervalArray[idx];
        		characterArray[j] = swapCharacter;
        		idx++;
        	}
        	
        }
        answer = characterArray.toString();
        return answer;
    }
	private static char[] getIntervalArray(char[] characterArray, int startIdx, int endIdx) {
		char[] intervalArray = 	new char[endIdx-startIdx];
		
		int idx = 0;
		
		for(int i=startIdx;i<endIdx;i++) {
			intervalArray[idx] = characterArray[i];
			idx++;
		}
		return intervalArray;
	}
}
