package CodingStudy;

import java.util.Scanner;

public class 출근경로 {
	static int w,h;
	static int path;
	static int[] dr = {0,1};
	static int[] dc = {1,0};//우,하
	public static void main(String[] args) {
		setData();
		getPath();
	}

	private static void getPath() {
		for(int dir=0;dir<2;dir++) {
			dfs(0,0,dir,false);//0,0에서 출발하고 교차 안꺾음			
		}
	}

	private static void dfs(int row, int col, int dir, boolean turn) {
		if(!downCheck(row) || !rightCheck(col)) return;//영역 넘어가면 안봄
		if(row==(h-1) && col==(w-1)) {
			
			return;
		}
		if(turn==false){//안꺾어봤으면
			if(dir==0){//오른쪽으로 가고있었으면
				dir = 1;//아래방향 한번 본다.
				dfs(row+dr[dir],col,dir,true);//꺾어서 보냄
			}
			else if(dir==1) {//아래로 가고있었으면
				dir = 0;
				dfs(row,col+dc[dir],dir,true);
			}
		}else if(turn==true){//꺾인채로 왔으면 직진하고 꺾은거 초기화
			dfs(row+dr[dir],col+dr[dir],dir,false);
		}
	}

	private static boolean rightCheck(int nc){
		if(nc<w) return true;
		return false;
	}

	private static boolean downCheck(int nr) {
		if(nr<h) return true;
		return false;
	}

	private static void setData() {
		Scanner sc = new Scanner(System.in);
		w = sc.nextInt();
		h = sc.nextInt();
		city = new int[h][w];
		city[0][1] = 1;
		city[1][0] = 1;
	}
}
