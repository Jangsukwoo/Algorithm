package CodingStudy;

import java.util.Arrays;
import java.util.Scanner;
/*
 * Palindrome
 */
public class 팰린드롬만들기 {
	static String name;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		name = sc.nextLine();
		char[] temp = name.toCharArray();
		name = "";
		Arrays.sort(temp);
		for(int i=0;i<temp.length;i++) name+=temp[i];//정렬된 상태
		makePalindrome();
	}
	private static void makePalindrome(){
		int lastIndex = name.length()-1;
		for(int startIndex=0;startIndex<(name.length()/2);startIndex++){
			if(name.charAt(startIndex)==name.charAt(lastIndex)) continue;
			else{//만약 같지 않다면
				boolean swap = false;
				for(int i=lastIndex;i>startIndex;i--){
					//뒤에서부터 보는데
					if(name.charAt(startIndex)==name.charAt(lastIndex)){//스왑할 수 있는 문자를 찾았다면
						char tmp = name.charAt(startIndex)
;					}
				}
			}
		}
	}
}
