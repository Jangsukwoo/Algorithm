package CodingTest;

import java.util.Arrays;

public class Taxi {
	static int n = 10;
	static int[] P = {5,7,8,2,4,6,1,8,9,10};
	public static void main(String[] args) {
		int a = solution(n,P);
		System.out.println(a);
	}
	private static int solution(int n, int[] p) {
		int min = Integer.MAX_VALUE;
		int sum=0;
		int[] dp = new int[10];
		dp[0] = 1;
		min = p[0];
		int cnt=1;
		System.out.println("처음썸"+sum);
		for(int day=0;day<10;day++){
			if(p[day]<min) {
				dp[day]=day;
				System.out.println("변하기전min값"+min);
				sum = (min*(day)) + ((10-(day))*p[day]);
				min = p[day];
				System.out.println("값2"+((10-(day))*p[day]));
				System.out.println("day값"+day);
				System.out.println("min값"+min);
				System.out.println("p값"+p[day]);
				System.out.println("sum값"+sum);
			}else {
				cnt++;	
			}
			
		}
		System.out.println(Arrays.toString(dp));
		return sum;
	}
}
