package CodingStudy;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.LinkedList;
import java.util.Queue;
import java.util.StringTokenizer;
/*
 * N개의 줄에 타일이 놓여있고
 * 각 조각은 정사각형이며 
 * 1~6숫자가 쓰여있음
 * 홀수 줄에는 N개의 타일
 * 짝수 줄에는 N-1개의 타일
 * 
 * 출력
 * 첫째줄에 가장 짧은 경로의 길이(타일의개수)
 * 둘쨰줄에 경로 상의 타일의 번호를 공백으로 구분해서 출력
 * 짧은 경로가 여러가지면 아무거나 출력 
 * 
 * 각 타일은 넘버링해야함
 * 
 * 그냥 목적지까지 true로 전부 방문해놓고 뒤에서 앞으로 
 * 
 * 트루로 색칠해놓고 목적지에서 거꾸로 타고 올라가면서 answerPath 추가 
 */
public class 과외맨 {
	static int N;
	static int[][] tileMap;
	static int[][] tileNumberMap;
	static boolean[][] visit;
	static int[] dr = {0,1,0};
	static int[] dc = {1,0,-1};//우하좌
	static ArrayList<Integer> answerPath;
	static int end;
	public static void main(String[] args) throws NumberFormatException, IOException {
		setData();
		bfs();
	}

	private static void bfs() {
		Queue<int[]> q = new LinkedList<int[]>();
		visit = new boolean[N+1][end+1];
		for(int i=1;i<=(end-1);i++) {
			for(int dir=0;dir<3;dir++) {
				int adjRow = 1+dr[dir];
				int adjCol = i+dc[dir];
				if(rangeCheck(adjRow,adjCol)) {
					if(visit[adjRow][adjCol]==false && tileMap[1][i]==tileMap[adjRow][adjCol]) {
						//방문한적 없고 인접한 타일이랑 같으면
						if(i%2==0){
							visit[1][i]=true;
							visit[1][i-1]=true;//두개씩 한조각이니깐
							q.add(new int[] {1,i});
						}else if(i%2==1){
							visit[1][i] = true;
							visit[1][i+1]=true;
							q.add(new int[] {1,i});
						}
					}
				}
			}
		}
	}

	private static boolean rangeCheck(int adjRow, int adjCol) {
		if(adjRow>=1 && adjRow<=N && adjCol>=1 && adjCol<=(2*N)) return true;
		return false;
	}

	private static void view() {
		for(int row=1;row<=N;row++) {
			for(int col=1;col<=end;col++) {
				System.out.print(visit[row][col]);
			}
			System.out.println();
		}
		System.out.println();
	}

	private static void setData() throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		N = Integer.parseInt(br.readLine());
		tileMap = new int[N+1][N*2+1];//1부터 시작할거임
		tileNumberMap = new int[N+1][N*2+1];
		end = N*2;
		int tileNumber=1;
		int tileCnt = (N*N)-(N/2);
		answerPath = new ArrayList<Integer>();
		
		int lineIdx=1;
		int tileIdx=1;
		for(int i=0,A,B;i<tileCnt;i++){
			StringTokenizer st = new StringTokenizer(br.readLine());
			A = Integer.parseInt(st.nextToken());
			B = Integer.parseInt(st.nextToken());
			tileNumberMap[lineIdx][tileIdx] = tileNumber;
			tileMap[lineIdx][tileIdx++]=A;
			tileNumberMap[lineIdx][tileIdx] = tileNumber;
			tileMap[lineIdx][tileIdx++]=B;
			if(lineIdx%2==1 && tileIdx==(end+1)){//홀수 라인이면서 tileIdx==N이면 다음라인으로
				tileIdx=2;//짝수라인은 2부터 시작
				lineIdx++;//짝수라인으로 
			}else if(lineIdx%2==0 && tileIdx==end){
				//짝수라인이면서 tileIdx==N-1이면 홀수라인으로
				tileIdx=1;//홀수라인은 1부터 시작
				lineIdx++;//홀수라인으로
			}
			tileNumber++;
		}
	}
}
