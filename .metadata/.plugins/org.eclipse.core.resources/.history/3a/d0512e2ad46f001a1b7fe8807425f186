package CodingStudy;

import java.util.Arrays;
import java.util.Scanner;
/*
 * Palindrome
 */
public class 팰린드롬만들기 {
	static char[] name;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String read = sc.nextLine();
		name = read.toCharArray();
		Arrays.sort(name);
		makePalindrome();
	}
	private static void makePalindrome(){
		int lastIndex = name.length-1;
		for(int startIndex=0;startIndex<(name.length/2);startIndex++){
			if(name[startIndex]==name[lastIndex]) continue;
			else{//만약 같지 않다면
				boolean swap = false;
				for(int i=lastIndex;i>startIndex;i--){
					//뒤에서부터 보는데
					if(name[startIndex]==name[lastIndex]){//스왑할 수 있는 문자를 찾았다면
						char tmp = name[lastIndex];
						name[lastIndex] = name[startIndex];
						name[startIndex] = tmp;
					}
				}
			}
		}
	}
}
