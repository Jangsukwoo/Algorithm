package CodingStudyHW;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

/*
 * N by M 맵 (N: row, M: col)
 * 
 * 1<=N,M<=1000
 * 
 * 0: 이동가능
 * 1: 벽
 * 
 * 1,1에서 N,M까지 이동하는 최단경로
 * 시작하는칸,끝나는칸 포함해서 카운팅
 * 
 * 0,0시작 N-1,M-1 끝나는 점 
 * 이동도중에 하나의 벽은 부수고 갈 수 있다.
 */
public class 벽부수고이동하기 {
	static int N,M;
	static int[] dr = {-1,0,1,0};
	static int[] dc = {0,1,0,-1};
	static int[][] distMap;
	static int INF;
	static char[][] map;
	static Queue<int[]> q = new LinkedList<int[]>();
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		M = sc.nextInt();
		map = new char[N][M];
		distMap = new int[N][M];
		sc.nextLine();
		for(int row=0;row<N;row++) {
			String readLine = sc.nextLine();
			map[row] = readLine.toCharArray();
		}
		setDistMap();

		//처리
		BFS();
		
		//처리
		printAnswer();
		
	}
	private static void printAnswer() {
		if(distMap[N-1][M-1]==98)
	}
	private static void setDistMap() {
		for(int row=0;row<N;row++) {
			for(int col=0;col<M;col++) {
				distMap[row][col] = 987654321;
			}
		}
	}
	private static void BFS() {
		distMap[0][0] = 1;
		q.add(new int[] {0,0,1});//인덱스 0,1은 row,col, 2는 벽 부순 여부, 3은 거리
		while(!q.isEmpty()) {
			int size = q.size();
			for(int i=0;i<size;i++){
				int[] curInfo = q.poll();
				for(int dir=0;dir<4;dir++) {
					int nr = curInfo[0]+dr[dir];
					int nc = curInfo[1]+dc[dir];
					int crash = curInfo[2];
					if(rangeCheck(nr,nc)){//영역 만족
						switch (map[nr][nc]){//가려는 곳이
						case '0'://그냥 땅이면
							if(distMap[nr][nc]>distMap[curInfo[0]][curInfo[1]]+1) {
								distMap[nr][nc] = distMap[curInfo[0]][curInfo[1]]+1;
								q.add(new int[] {nr,nc,crash});
							}
							break;
						case '1'://벽인데
							if(crash==1){//부술 수 있으면 가고 아니면 안간다.
								if(distMap[nr][nc]>distMap[curInfo[0]][curInfo[1]]+1) {
									distMap[nr][nc] = distMap[curInfo[0]][curInfo[1]]+1;
									q.add(new int[] {nr,nc,0});//사용
								}	
							}
							break;
						}
					}
				}
			}
		}
	}
	private static boolean rangeCheck(int nr, int nc) {
		if(nr>=0 && nr<N && nc>=0 && nc<M) return true;
		return false;
	}
}
