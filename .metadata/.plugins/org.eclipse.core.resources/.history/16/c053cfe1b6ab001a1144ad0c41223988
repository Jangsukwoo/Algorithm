package CodingAcademy;

import java.util.Arrays;

public class 부분집합구하기 {
	static int[] set = new int[] {1,2,3,4,5,6,7};
	static int answer;
	static boolean[] include;
	static int[] pick;
	public static void main(String[] args){
		include = new boolean[3];
		pick = new int[4];
		numSubsets(3,2);
		nCr(0,0);
		
	}
	
	private static void nCr(int idx, int depth){
		if(depth==4){
			System.out.println(Arrays.toString(pick));
			return ;
		}
		for(int i=idx;i<7;i++) {
			pick[depth] = set[i];
			nCr(i+1,depth+1);
		}
		return ;
	}

	

	
	private static int numSubsets(int n, int k) {
		if(k==-1){
			System.out.println(Arrays.toString(pick));
			return 1;
		}
		for(int i=(n-1);i>=0;i--){
			pick[k-1] = set[i];
			numSubsets(i-1, k-1);
		}
		return 0;
	}
}
