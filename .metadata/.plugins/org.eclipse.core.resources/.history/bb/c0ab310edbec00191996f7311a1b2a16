package CodingTest;

import java.util.ArrayList;
import java.util.Arrays;
class DayPerPee{
	int day;
	int pee;
	public DayPerPee(int d, int p){
		day = d;
		pee = p;
	}
	
}
public class Taxi {
	static int n = 10;
	static int[] P = {5,7,8,2,4,6,1,8,9,10};
	public static void main(String[] args) {
		int a = solution(n,P);
		System.out.println(a);
	}
	private static int solution(int n, int[] p) {
		int min = Integer.MAX_VALUE;
		int sum = 0;
		ArrayList<DayPerPee> dppList = new ArrayList<DayPerPee>();
		for(int day=0;day<10;day++){
			if(p[day]<min){
				min = p[day];
				dppList.add(new DayPerPee(day,p[day]));
			}
		}
		int size = dppList.size();

		if(size==1) sum = dppList.get(0).pee*10;
		else {
			for(int i=1;i<size;i++) {
				if((size-1)!=i) {
					sum += (dppList.get(i).day-dppList.get(i-1).day)*dppList.get(i).pee;
				}else {
					sum += (dppList.get(i).day-dppList.get(i-1).day)*dppList.get(i-1).pee;
					sum += (10-dppList.get(i).day)*dppList.get(i).pee;
				}
			}
		}
		return 0;
	}
}
