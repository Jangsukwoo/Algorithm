package codingtest20하;

import java.util.Stack;

public class 쿠1 {
	public static void main(String[] args) {
		String value_string = "10";
		int value = Integer.parseInt(value_string, 4);
		System.out.println(value);
	}
	public static int[] solution(int N) {
		int[] answer = {};
		for(int num=1;num<=10;num++) {
			String baseNotation = getBaseNotation(N,num);
		}
		return answer;
	}
	private static String getBaseNotation(int N, int num) {
		Stack<Character> stack = new Stack<Character>();
		String baseNotation ="";
		while(N>0) {
			if(N%num>0) stack.add((char)(N%num+55));
			else stack.add((char) (N%num));
			N/=num;
		}
		while(!stack.isEmpty()) baseNotation+=stack.pop();
		if(baseNotation.equals("")) baseNotation="0";
		return baseNotation;
	}
}
