package CodingTest;

import java.util.Arrays;
import java.util.Scanner;
/*
 4
-270 -269
-269 -268
-268 -267
-267 -266
 
 
4
-10 5
-15 36
10 73
27 44
 */
class temperature implements Comparable<temperature>{
    int floor;
    int ceil;
    temperature(int f, int c){
        floor = f;
        ceil = c;
    }
    @Override
    public int compareTo(temperature o) {
        if(this.floor<o.floor) {
            return -1;
        } else if(this.floor==o.floor) {
            return 0;
        } else {
            return 1;
        }
    }
}
public class Toilet {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        int cnt=1;
        int criteria;
        temperature[] t= new temperature[N];
        for(int i=0;i<N;i++) t[i] = new temperature(sc.nextInt(), sc.nextInt());
        Arrays.sort(t);
        criteria=t[0].ceil;
        for(int i=1;i<t.length;i++) {
            if(criteria>t[i].floor) {
                if(criteria>t[i].ceil) {
                    criteria=t[i].ceil;
                }
            }
            else if(criteria<t[i].floor) {
                cnt++;
                criteria=t[i].ceil;
            }
        }
        System.out.println(cnt);
    }
}