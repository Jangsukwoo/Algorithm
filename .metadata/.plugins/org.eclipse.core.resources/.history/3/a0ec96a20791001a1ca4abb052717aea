package 프로그래머스;

public class 스킬체크1_1 {
	public static void main(String[] args) {
		
	}
    public int solution(int num) {
        int answer = 0;
        while(answer<=500){
        	answer++;
        	if(num%2==0) num/=2;
        	else if(num%2!=0) {
        		num*=3;
        		num+=1;
        	}
        	if(num==1)
        }
        return answer;
    }
}
