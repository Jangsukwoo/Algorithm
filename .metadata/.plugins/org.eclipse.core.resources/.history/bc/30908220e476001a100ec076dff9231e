package CodingTest;
/*
 * 2020 상 라인
 */
public class RoadFix {
	public static void main(String[] args) {
		System.out.println(solution("111011110011111011111100011111",3));
	}
    public static int solution(String road, int n) {
        int answer = -1;
        int startIdx = 0;
        int endIdx = 0;
        int length=0;
        int maxLength = 0;
        int diff=0;
        boolean zeroIdx = false;
        
        while(endIdx!=road.length()){
        	if(road.charAt(endIdx)=='1'){
        		length++;
        	}else if(road.charAt(endIdx)=='0'){
        		if(n>0){
        			n--;//설치하고 계속진행
        			if(zeroIdx==false) {
        				zeroIdx = true;
        				diff = endIdx-startIdx;
        				startIdx = endIdx;
        			}
        		}else{//더이상 설치 못함 
        			zeroIdx = false;
        			maxLength = Math.max(length,maxLength);
        			length-=diff;
        			diff=0;
        		}
        	}
        	endIdx++;
        }
        return answer;
    }
}
