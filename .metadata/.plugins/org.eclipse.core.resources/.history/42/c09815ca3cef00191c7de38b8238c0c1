package 순열조합;import java.util.Arrays;

public class 비트마스킹 {
	public static void main(String[] args) {
		int n =2 ;
		int[] a = new int[n];
		// a에 값을 넣는 과정 필요!!!
		for(int i=1;i<=n;i++) a[i-1] = i;
		int[] first = new int[1 << n];

		for(int i = 0; i < (1 << n); i++){
			for(int k = 0; k < n; k++){
				if((i & (1 << k)) == (1 << k)){
					first[i] += a[k];
				}
			}
			System.out.println(Arrays.toString(first));
		}
	}
}
