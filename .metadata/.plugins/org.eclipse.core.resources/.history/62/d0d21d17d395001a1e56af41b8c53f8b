package 구현;

import java.util.Scanner;

public class Z {
	static int N,r,c,size;
	static int[][] zMap;
	static int zCnt;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		r = sc.nextInt();
		c = sc.nextInt();
		//2^N
		zCnt=1;
		size = (int) Math.pow(2,N);
		zMap = new int[size][size];
		recursive(0,0,size);
		System.out.println(zCnt);
	}
	private static void recursive(int ltr, int ltc, int size) {
		if(zMap[ltr][ltc]!=0) return;
		if(size==1){
			zMap[ltr][ltc]=zCnt++;
			return;
		}
		recursive(ltr, ltc, size/2);
		recursive(ltr, ltc+(size/2), size/2);
		recursive(ltr+(size/2), ltc, size/2);
		recursive(ltr+(size/2), ltc+(size/2), size/2);
	}
}
