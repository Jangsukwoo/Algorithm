package CodingAcademy;

import java.util.Arrays;

public class 부분집합구하기 {
	static int[] set = new int[] {1,2,3};
	static int answer;
	static boolean[] include;
	static int[] pick;
	public static void main(String[] args){
		include = new boolean[3];
		pick = new int[2];
		//numSubsets(3,2);
		nCr(0,0);
	}
	private static void nCr(int idx, int depth){
		if(depth==2){
			System.out.println(Arrays.toString(pick));
			return ;
		}
		for(int i=idx;i<3;i++) {
			pick[depth] = set[i];
			nCr(i+1,depth+1);
		}
		return ;
	}
	private static int numSubsets(int n, int k) {
		if(k==-1){
			System.out.println(Arrays.toString(pick));
			return 1;
		}
		for(int i=(n-1);i>=0;i--){
			System.out.println("포문");
			pick[k-1] = set[i];
			System.out.println("깊이"+k);
			System.out.println(Arrays.toString(pick));
			numSubsets(i-1, k-1);
		}
		return 0;
	}
}
