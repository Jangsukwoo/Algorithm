package Simulation;

import java.util.ArrayList;
import java.util.Scanner;

public class RoundRobin{
	static int N,T;//N = players, T = turn
	static ArrayList<Integer> playerList;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		playerList = new ArrayList<Integer>();
		while(true) {
			N = sc.nextInt();
			if(N==0) break;//끝
			T = sc.nextInt();
			playerList.clear();
			for(int i=0;i<N;i++) playerList.add(0);
			roundRobinStart();
			
		}
		
	}
	private static void roundRobinStart() {
		int idx=0;//처음시작은 0 
		while(true){
			boolean end = true;
			int size = playerList.size();
			for(int i=idx;i<(T+idx);i++){
				playerList.set(i%size,playerList.get(i%size)+1);
				idx = i%size;
			}//턴 끝
			for(int i=0;i<(size-2);i++){
				if(playerList.get(i)!=playerList.get(i+1)){
					end = false;
					break;
				}
			}
			if(end) {
				System.out.println(playerList.size()+" "+playerList.get(0));
				break;
			}
			System.out.println(playerList.toString());
			playerList.remove(idx);
			System.out.println("빼고난후");
			System.out.println("idx는"+idx);
			System.out.println(playerList.toString());

		}
	}
}
