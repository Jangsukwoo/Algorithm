public class 부분집합구하기 {
	static int[] set = new int[] {1,2,3};
	static int answer;
	static boolean[] include;
	static int[] pick;
	public static void main(String[] args){
		include = new boolean[3];
		pick = new int[2];
		System.out.println(numSubsets(3,2));
		System.out.println(Arrays.toString(nCr(0,0)));
	}
	private static vode nCr(int idx, int depth){
		if(depth==2) {
		}
	}
	private static int numSubsets(int n, int k) {
		System.out.println("i값은?"+" "+n);
		System.out.println("k값은?"+" "+k);
		if(k==0){
			System.out.println("아");
			System.out.println(Arrays.toString(pick));
			return 1;
		}
		for(int i=n-1;i>=0;i--){
			System.out.println("포문");
			pick[k-1] = set[i];
			System.out.println("깊이"+k);
			System.out.println(Arrays.toString(pick));
			numSubsets(i-1, k-1);
		}
		return 0;
	}
}
