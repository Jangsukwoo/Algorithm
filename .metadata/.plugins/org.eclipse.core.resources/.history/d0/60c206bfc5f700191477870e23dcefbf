package BAEKJOON;

import java.util.LinkedList;
import java.util.Queue;
import java.util.Scanner;

public class 치즈 {
	static Queue<int[]> airZone;
	static int[][] map;
	static boolean[][] visit;
	static int[] dr = {-1,0,1,0};
	static int[] dc = {0,1,0,-1};
	static boolean clear;
	static int turn;
	static int cheeseCount;
	static int saveCount;
	static int H,W;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		H = sc.nextInt();
		W = sc.nextInt();
		map = new int[H][W];
		visit = new boolean[H][W];
		airZone = new LinkedList<int[]>();
		for(int row=0;row<H;row++)
			for(int col=0;col<W;col++) map[row][col] = sc.nextInt();
		
		while(!clear){
			turn++;
			setAirzone();
			removeCheese();
			remainCheeseCheck();
			view();
		}
		System.out.println(turn);
		System.out.println(saveCount);
		//view();
	}
	private static void remainCheeseCheck(){
		saveCount = cheeseCount;
		cheeseCount=0;
		for(int row=0;row<H;row++) {
			for(int col=0;col<W;col++) {
				if(map[row][col]==1) {
					cheeseCount++;
				}
			}
		}
		if(cheeseCount==0) clear = true;
	}
	private static void removeCheese() {
		while(!airZone.isEmpty()){
			int[] curRC = airZone.poll();
			for(int dir=0;dir<4;dir++){
				int nr = curRC[0]+dr[dir];
				int nc = curRC[1]+dc[dir];
				if(rangeCheck(nr,nc)) {
					map[nr][nc]=0;
				}
			}
		}
	}
	private static boolean rangeCheck(int nr, int nc) {
		if(nr>=0 && nr<H && nc>=0 && nc<W) return true;
		return false;
	}
	private static void view() {
		for(int row=0;row<H;row++) {
			for(int col=0;col<W;col++) {
				System.out.print(visit[row][col]+" ");
			}
			System.out.println();
		}
		System.out.println();
	}
	private static void setAirzone() {
		for(int col=0;col<W;col++){
			for(int row=0;row<H;row++){
				if(map[row][col]==0 && visit[row][col]==false){
					airZone.add(new int[] {row,col});
					visit[row][col]= true;
				}
				else if(map[row][col]==1) break;
			}
		}
		
		for(int row=0;row<H;row++){
			for(int col=0;col<W;col++){
				if(map[row][col]==0 && visit[row][col]==false){
					airZone.add(new int[] {row,col});
					visit[row][col]= true;
				}
				else if(map[row][col]==1) break;
			}
		}
		
		for(int col=0;col<W;col++){
			for(int row=(H-1);row>=0;row--){
				if(map[row][col]==0 && visit[row][col]==false){
					airZone.add(new int[] {row,col});
					visit[row][col]= true;
				}
				else if(map[row][col]==1) break;
			}
		}
		
		for(int row=0;row<H;row++){
			for(int col=(W-1);col>=W;col--){
				if(map[row][col]==0 && visit[row][col]==false){
					airZone.add(new int[] {row,col});
					visit[row][col]= true;
				}
				else if(map[row][col]==1) break;
			}
		}
	}
}
