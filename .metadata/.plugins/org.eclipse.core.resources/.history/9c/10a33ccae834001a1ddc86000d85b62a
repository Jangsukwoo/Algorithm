package CodingTest;

public class twoPointer_naver {
	static int startPointer;
	static int endPointer = 1;
	static int MaxLength=1;
	static int startIndex;
	public static void main(String[] args) {
		int[] A = new int[]{2,2,2,2,1,2,-1,2,1,3};
		int[] B = new int[] {30,20,10}; 
		soulution(A);
		System.out.println(startIndex);
	}
	private static void soulution(int[] A) {
		int size = A.length;
		int length=1;
		while(endPointer<size) {
			if(A[endPointer]>A[startPointer]) {
				endPointer++;
				startPointer++;
				length++;
				MaxLength = Math.max(length,MaxLength);
			}
			else { //바뀌는 시점 
				MaxLength = Math.max(length,MaxLength);
				endPointer++;
				startPointer++;
				if(length==MaxLength){//구한 길이가 최대 길이와 같으면?
					startIndex = startPointer;
				}
				System.out.println("스타트인덱스"+ startIndex);
				length=1;
				
			}
		}
	}
}
