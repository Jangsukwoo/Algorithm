package CodingTest;

public class Taxi {
	static int n = 10;
	static int[] P = {5,4,3,2,1,6,7,8,9,10};
	public static void main(String[] args) {
		int a = solution(n,P);
		System.out.println(a);
	}
	private static int solution(int n, int[] p) {
		int min = Integer.MAX_VALUE;
		int sum=0;

		min = p[0];
		sum = p[0]*10;
		System.out.println("처음썸"+sum);
		for(int day=0;day<10;day++){
			if(p[day]<min) {
				System.out.println("변하기전min값"+min);
				sum = (min*(day+1)) + ((10-(day))*p[day]);
				min = p[day];
				System.out.println("day값"+day);
				System.out.println("min값"+min);
				System.out.println("p값"+p[day]);
				System.out.println("sum값"+sum);
			}
		}
		return sum;
	}
}
