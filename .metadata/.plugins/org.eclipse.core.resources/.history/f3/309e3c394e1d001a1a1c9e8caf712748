package CodingStudy;

import java.util.Arrays;
import java.util.Collections;
import java.util.LinkedList;
/*
 * 티켓이 5장이면 방문하는 도시는 6개
 * String[][]에서
 * 첫번째 []는 티켓인덱스
 * 두번째 []의 0,1은 시작도시,도착도시 인덱스
 */
public class 여행경로 {
	static int N;
	static LinkedList<String[]> pathList = LinkedList<String[]>();
	static String[] path;
	static int pathSize;
	static int ticketSize;
	static boolean[] useTicket;
	public static void main(String[] args) {
		solution(new String[][] {{"ICN","SFO"},{"ICN","ATL"},{"SFO","ATL"},{"ATL","ICN"},{"ATL","SFO"}});
	}
    public static String[] solution(String[][] tickets) {
        String[] answer = {};
        ticketSize = tickets.length;
        pathSize = tickets.length+1;
        useTicket = new boolean[ticketSize];
        path = new String[pathSize];
        String start= "ICN";
        dfs(start,tickets,0);
        return answer;
    }
	private static void dfs(String start, String[][] tickets, int depth) {
		if(depth==pathSize){
			addPath();
			return;
		}
		for(int i=0;i<ticketSize;i++){
			if(tickets[i][0].equals(start)){//start도시에서 시작하는 티켓이면서
				if(useTicket[i]==false){//사용하지않은 티켓이면
					path[depth]=tickets[i][0];
					useTicket[i]=true;
					dfs(tickets[i][0],tickets,depth+1);
					useTicket[i]=false;
				}
			}
		}
	}
	private static void addPath() {
		String[] pathCase = new String[pathSize];
		for(int i=0;i<pathSize;i++) {
			pathCase[i] = path[i];//값 복사
		}
		pathList.add(pathCase);
	}
}
