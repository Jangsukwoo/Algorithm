package 순열조합;
import java.util.Arrays;

public class 비트마스킹 {
	static boolean[] visit;
	public static void main(String[] args) {
		 visit = new boolean[3];
		 for(int i = 1; i <= 3; i++) {
			 for(int j = 0, size = 1 << i; j < size; j++) {
				 for(int k = 0; k < i; k++) {
					 if(((1 << k) & j) == 0) {
						 System.out.print(false + " ");
					 } else {
						 System.out.print(true + " ");
					 }
				 }
				 System.out.println();
			 }
		 }
	}
}
