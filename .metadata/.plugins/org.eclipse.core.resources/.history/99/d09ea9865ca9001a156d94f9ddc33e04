package CodingAcademy;

import java.util.Scanner;

public class 별찍기_배성재_박시후 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		for(int i=0;i<N;i++){
			for(int j=N-i-1;j>=0;j--) {
				System.out.println(" ");
			}
			for(int j=0;j<i;j++) {
				
			}
		}
	}
}
