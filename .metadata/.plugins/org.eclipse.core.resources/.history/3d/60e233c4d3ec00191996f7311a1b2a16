package CodingTest;

public class Taxi {
	static int n = 10;
	static int[] P = {5,4,3,2,1,6,7,8,9,10};
	public static void main(String[] args) {
		int a = solution(n,P);
	}
	private static int solution(int n, int[] p) {
		int min = Integer.MAX_VALUE;
		int length = p.length;
		int d=10;
		
		for(int day=1;day<=length;day++){
			int buy = d*p[day-1];
			min=Math.min(buy,min);
			if(min!=buy){//구입 후 최소값이 아니면
				
			}else{
				d = d-day;
				
			}
		}
		return 0;
	}
}
