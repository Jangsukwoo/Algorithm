package CodingTest;

public class twoPointer_naver {
	static int startPointer;
	static int endPointer = 1;
	static int MaxLength=1;
	public static void main(String[] args) {
		int[] A = new int[]{2,2,2,2,1,2,-1,2,1,3,4};
		soulution(A);
		System.out.println(MaxLength);
	}
	private static void soulution(int[] A) {
		int size = A.length;
		int length=1;
		while(endPointer<size) {
			if(A[endPointer]>A[startPointer]) {
				System.out.println("스타트");
				System.out.println(A[startPointer]);
				System.out.println("앤드");
				System.out.println(A[endPointer]);
				endPointer++;
				startPointer++;
				length++;
				System.out.println("렝스");
				System.out.println(length);
			}
			else {
				MaxLength = Math.max(length,MaxLength);
				length=1;
				endPointer++;
				startPointer++;
			}
		}
		if(endPointer==size-1) MaxLength = Math.max(length,MaxLength);
	}
}
